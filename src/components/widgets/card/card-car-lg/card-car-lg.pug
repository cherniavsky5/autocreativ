include ../../../ui/typography/text/text

mixin card-car-lg(data, attributes)
  -
    var { href, title, caption, img, availability, properties, price } = data || {};

  .card-car.card&attributes(attributes)
    ._header
      ._info
        a.card-title._title(href=href title='')= title
        ._availability= availability

    ._properties
      each property in properties
        ._property
          svg._property-icon
            use(href=`/icon-sprite.svg#${property.icon}`)
          span._property-title= property.title

    a.card-media._media(href=href title='')
      img.card-img._img(src=img)

    ._footer
      ._price= price.current
          span._old= price.old