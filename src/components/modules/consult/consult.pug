include ../../ui/typography/heading/heading
include ../../ui/typography/text/text

include ../../ui/form/button/button

mixin consult(data, attributes)
  - var { title, caption, img } = data ? data : {}

  .consult&attributes(attributes)
    ._card
      +heading({
        tag: 'div',
        level: 3
      })._heading!= title
        +text({ tag: 'span', theme: 'gradient' })= caption

      +button()&attributes({ 'data-modal-trigger': 'modal-feedback' })._button Получить консультацию

    picture._picture
      source(srcset=img.mobile media='(max-width: 767px)')
      source(srcset=img.tablet media='(max-width: 1200px)')

      img._img(src=img.desktop alt='')
